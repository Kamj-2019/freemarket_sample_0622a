.single-container
  %header.regi-single-header
    %h1
      = link_to items_path do
        =image_tag "/assets/logo-gray.png", class: "regi-single-header__logo"
    %nav.progress-bar
      %ol.clearfix
        %li
          会員情報
          .progress-status
        %li
          電話番号認証
          .progress-status
        %li
          お届け先住所入力
          .progress-status
        %li.active
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  .regi-main
    .regi-main__header
      %h2 支払い方法
    .regi-main__form
      = form_tag(pay_signup_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
        .form-group
          %label カード番号
          %span.required 必須
          %br
          = text_field_tag "number", "", class: "input-default", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
        .form-group
          %label 有効期限
          %span.required 必須
          %br
          %select.card-valid#exp_month{name: "exp_month", type: "text"}
            %option{value: ""} --
            %option{value: "1"}01
            %option{value: "2"}02
            %option{value: "3"}03
            %option{value: "4"}04
            %option{value: "5"}05
            %option{value: "6"}06
            %option{value: "7"}07
            %option{value: "8"}08
            %option{value: "9"}09
            %option{value: "10"}10
            %option{value: "11"}11
            %option{value: "12"}12
          %span 月/
          %select.card-valid#exp_year{name: "exp_year", type: "text"}
            %option{value: ""} --
            %option{value: "2019"}19
            %option{value: "2020"}20
            %option{value: "2021"}21
            %option{value: "2022"}22
            %option{value: "2023"}23
            %option{value: "2024"}24
            %option{value: "2025"}25
            %option{value: "2026"}26
            %option{value: "2027"}27
            %option{value: "2028"}28
            %option{value: "2029"}29
          %span 年
        .form-group
          %label セキュリティコード
          %span.required 必須
          %br
          = text_field_tag "cvc", "", class: "input-default", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
        .form-group
          #card_token
          = submit_tag "追加する", id: "token_submit", class: 'btn'

= render 'layouts/login_footer'


