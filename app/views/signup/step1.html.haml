.single-container
  %header.regi-single-header
    %h1
      = link_to '/' do
        =image_tag "/assets/logo-gray.png", class: "regi-single-header__logo"
    %nav.progress-bar
      %ol.clearfix
        %li.active
          会員情報
          .progress-status
        %li
          電話番号認証
          .progress-status
        %li
          お届け先住所入力
          .progress-status
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  .regi-main
    .regi-main__header
      %h2 会員情報入力
    .regi-main__form
      = form_for @user, url: step2_signup_index_path, method: :get do |f|
        = fields_for @user_detail, url: step2_signup_index_path, method: :get do |c|
          .form-group
            %label ニックネーム
            %span.required 必須
            %br
            = f.text_field :nickname, class: "input-default", placeholder: '例) メルカリ太郎'
          .form-group
            %label メールアドレス
            %span.required 必須
            %br
            = f.email_field :email, class: "input-default", placeholder: 'PC・携帯どちらでも可'
          .form-group
            %label パスワード
            %span.required 必須
            %br
            = f.password_field :password, class: "input-default", placeholder: '8文字以上'
          .form-group
            %label パスワード（確認）
            %span.required 必須
            %br
            = f.password_field :password_confirmation, class: "input-default", placeholder: '8文字以上'
          .form-group
            %h3 本人確認
            %p 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
          .form-group
            %label お名前（全角）
            %span.required 必須
            %br
            %li
              = c.text_field :first_name, class: "input-default input-half", placeholder: "例)山田"
              = c.text_field :family_name, class: "input-default input-half", placeholder: "例)彩"
          .form-group
            %label お名前カナ（全角）
            %span.required 必須
            %br
            %li
              = c.text_field :kana_first_name, class: "input-default input-half", placeholder: "例)ヤマダ"
              = c.text_field :kana_family_name, class: "input-default input-half", placeholder: "例)アヤ"
          .form-group
            %label 生年月日
            %span.required 必須
            %br
            .birthday-select-wrap
              .select-wrap
                %select.select-wrap__default{name: "year", style: "font-size: 12px;"}
                  %option{value: ""} --
                  %option{value: "2000"} 2000
                  %option{value: "1999"} 1999
                  %option{value: "1998"} 1998
                  %option{value: "1997"} 1997
                  %option{value: "1996"} 1996
                  %option{value: "1995"} 1995
                  %option{value: "1994"} 1994
                  %option{value: "1993"} 1993
                  %option{value: "1992"} 1992
                  %option{value: "1991"} 1991
                  %option{value: "1990"} 1990
                  %option{value: "1989"} 1989
                  %option{value: "1988"} 1988
                  %option{value: "1987"} 1987
                  %option{value: "1986"} 1986
                  %option{value: "1985"} 1985
                  %option{value: "1984"} 1984
                  %option{value: "1983"} 1983
                  %option{value: "1982"} 1982
                  %option{value: "1981"} 1981
                  %option{value: "1980"} 1980
                %i.fas.fa-angle-down
              %span 年
              .select-wrap.select-wrap__month
                %select.select-wrap__default{name: "month", style: "font-size: 12px;"}
                  %option{value: ""} --
                  %option{value: "1"} 1
                  %option{value: "2"} 2
                  %option{value: "3"} 3
                  %option{value: "4"} 4
                  %option{value: "5"} 5
                  %option{value: "6"} 6
                  %option{value: "7"} 7
                  %option{value: "8"} 8
                  %option{value: "9"} 9
                  %option{value: "10"} 10
                  %option{value: "11"} 11
                  %option{value: "12"} 12
                %i.fas.fa-angle-down
              %span 月
              .select-wrap.select-wrap__day
                %select.select-wrap__default{name: "day", style: "font-size: 12px;"}
                  %option{value: ""} --
                  %option{value: "1"} 1
                  %option{value: "2"} 2
                  %option{value: "3"} 3
                  %option{value: "4"} 4
                  %option{value: "5"} 5
                  %option{value: "6"} 6
                  %option{value: "7"} 7
                  %option{value: "8"} 8
                  %option{value: "9"} 9
                  %option{value: "10"} 10
                  %option{value: "11"} 11
                  %option{value: "12"} 12
                  %option{value: "13"} 13
                  %option{value: "14"} 14
                  %option{value: "15"} 15
                  %option{value: "16"} 16
                  %option{value: "17"} 17
                  %option{value: "18"} 18
                  %option{value: "19"} 19
                  %option{value: "20"} 20
                  %option{value: "21"} 21
                  %option{value: "22"} 22
                  %option{value: "23"} 23
                  %option{value: "24"} 24
                  %option{value: "25"} 25
                  %option{value: "26"} 26
                  %option{value: "27"} 27
                  %option{value: "28"} 28
                  %option{value: "29"} 29
                  %option{value: "30"} 30
                  %option{value: "31"} 31
                %i.fas.fa-angle-down
              %span 日
            = c.text_field :birthday, type: "hidden", value: ""
          .form-info-text
            %p ※本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。
          //reCAPTCHA導入予定
          .form-group
            %img{:src => "/assets/recaptcha.png", class:"recaptcha-image"}/
            %p.text-center 
              「次へ進む」のボタンを押すことにより、
              = link_to "利用規約", "https://www.google.com/"
              に同意したものとみなします
          .form-group
            = f.submit "次へ進む", class: 'btn'
          .form-group
            %p.text-right
              = link_to "本人登録について＞", "https://www.google.com/"
= render 'layouts/login_footer'


