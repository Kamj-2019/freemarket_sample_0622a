.single-container
  %header.regi-single-header
    %h1
      = link_to '/' do
        =image_tag "/assets/logo-gray.png", class: "regi-single-header__logo"
    %nav.progress-bar
      %ol.clearfix
        %li
          会員情報
          .progress-status
        %li
          電話番号認証
          .progress-status
        %li.active
          お届け先住所入力
          .progress-status
        %li
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  .regi-main
    .regi-main__header
      %h2 住所入力
    .regi-main__form
      = form_for @user, url: step4_signup_index_path, method: :get do |f|
        = fields_for @user_detail, url: step4_signup_index_path, method: :get do |c|        
          .form-group
