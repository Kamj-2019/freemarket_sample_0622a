.single-container
  %header.regi-single-header
    %h1
      = link_to '/' do
        =image_tag "/assets/logo-gray.png", class: "regi-single-header__logo"
    %nav.progress-bar
      %ol.clearfix
        %li
          会員情報
          .progress-status
        %li
          電話番号認証
          .progress-status
        %li
          お届け先住所入力
          .progress-status
        %li.active
          支払い方法
          .progress-status
        %li
          完了
          .progress-status
  .regi-main
    .regi-main__header
      %h2 支払い方法
    .regi-main__form
      -# cardsテーブル未作成のため、仮で作成
      = form_for @user, url: done_signup_index_path, method: :get do |f|
        = fields_for @user_detail, url: done_signup_index_path, method: :get do |c|
          .form-group
            %label カード番号
            %span.required 必須
            %br
            -# cardsテーブル未作成のため、仮でuserで記入
            = c.text_field :user, class: "input-default", placeholder: '半角数字のみ', required: "true"
          .form-group
            %label 有効期限
            %span.required 必須
            %br
            %select.card-valid
              %option{value:"1"} 01
              %option{value:"2"} 02
              %option{value:"3"} 03
              %option{value:"4"} 04
              %option{value:"5"} 05
              %option{value:"6"} 06
              %option{value:"7"} 07
              %option{value:"8"} 08
              %option{value:"9"} 09
              %option{value:"10"} 10
              %option{value:"11"} 11
              %option{value:"12"} 12
            %span 月
            %br
            %select.card-valid
              %option{value:"19"} 19
              %option{value:"20"} 20
              %option{value:"21"} 21
              %option{value:"22"} 22
              %option{value:"23"} 23
              %option{value:"24"} 24
              %option{value:"25"} 25
              %option{value:"26"} 26
              %option{value:"27"} 27
              %option{value:"28"} 28
              %option{value:"29"} 29
            %span 年
          .form-group
            %label セキュリティコード
            %span.required 必須
            %br
            -# cardsテーブル未作成のため、仮でuserで記入
            = c.text_field :user, class: "input-default", placeholder: 'カード背面4桁もしくは3桁の番号', required: "true"
            %p.text-right
              = link_to "カード裏面の番号とは？", "https://www.google.com/"
          .form-group
            = f.submit "次へ進む", class: 'btn'
= render 'layouts/login_footer'

